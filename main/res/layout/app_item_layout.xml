<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_app"
    android:layout_marginTop="@dimen/margin_card"
    android:background="@android:color/holo_blue_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_relative_height"
        android:background="@android:color/holo_green_dark">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_edit_app"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/holo_blue_bright" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_delete_app"
            android:src="@android:drawable/ic_menu_delete"
            android:background="@android:color/holo_red_dark"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:textSize="@dimen/tv_size_title"
            android:text="@string/title"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/iv_app" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="@dimen/iv_width"
            android:layout_height="@dimen/iv_height"
            android:id="@+id/iv_app"
            android:src="@drawable/androidan"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/margin_gif_left"
            android:layout_marginStart="@dimen/margin_gif_Start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_description"
            android:textSize="@dimen/tv_size_description"
            android:text="@string/desccription"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignBottom="@+id/iv_app"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_alignStart="@+id/tv_title" />


    </RelativeLayout>

</android.support.v7.widget.CardView>